<Window x:Class="repaso.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:repaso"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Gray">
        <StackPanel Orientation="Vertical" Margin="40">
            <TextBox Name="txtUser" Width="250" Height="auto" FontSize="25" Margin="15"/>

            <PasswordBox x:Name="pwbContra" Width="250" Height="auto" FontSize="25" Margin="15"></PasswordBox>

            <Button x:Name="btnIniciar" Width="250" Height="auto" FontSize="25" Margin="15" Click="BtnIniciar_Click" >iniciar sesion</Button>
        </StackPanel>
    </Grid>
</Window>
